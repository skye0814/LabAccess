@model ERSEntity.ClaimReturnEquipmentEntity
@{
    Layout = null;
}
<div class="wrap-contact100" style="margin-top: 30px;">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmViewEquipmentRequest" }))
    {
        @Html.AntiForgeryToken()

        <form class="contact100-form">
            <span class="contact100-form-title" style="text-transform: uppercase">
                View Request
            </span>
            <div class="wrap-input100 validate-input">
                <span class="label-input100">Request GUID</span><span style="color:red"> *</span>
                @Html.EditorFor(model => model.RequestGUID, new { htmlAttributes = new { @class = "input100", @maxlength = "50", @readonly = "readonly" } })
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input">
                <span class="label-input100">Requestor</span><span style="color:red"> *</span>
                @Html.EditorFor(model => model.Requestor, new { htmlAttributes = new { @class = "input100", @maxlength = "50" } })
                <span class="focus-input100"></span>
            </div>
            <div class="wrap-input100 validate-input">
                <span class="label-input100">Request Date</span><span style="color:red"> *</span>
                @Html.EditorFor(model => model.RequestDateTime, new { htmlAttributes = new { @class = "input100", @maxlength = "50" } })
                <span class="focus-input100"></span>
            </div>
            <div class="wrap-input100 validate-input">
                <span class="label-input100">Start Time</span><span style="color:red"> *</span>
                @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "input100", @maxlength = "50" } })
                <span class="focus-input100"></span>
            </div>
            <div class="wrap-input100 validate-input">
                <span class="label-input100">End Time</span><span style="color:red"> *</span>
                @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "input100", @maxlength = "50" } })
                <span class="focus-input100"></span>
            </div>
            <div class="wrap-input100 validate-input">
                <span class="label-input100">Status</span><span style="color:red"> *</span>
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "input100", @maxlength = "50", @readonly = "readonly" } })
                <span class="focus-input100"></span>
            </div>

        </form>
    }

    <div class="ViewList">
        <h4 class="panel-title">Scan item QR here</h4>
        <table id="tblRequestEquipmentItemList"></table>
        <div id="divPager"></div>
    </div>

    <div id="divErrorMessage"></div>
    <div style="text-align:center; margin-top:30px;">
        <button id="btnClaim" class="btnAddPage" onclick="return false" title="Confirm. Mark request as claimed/returned."><i class="glyphicon glyphicon-floppy-disk"></i> Confirm</button>
        <button id="btnReturnList" class="btnAddPage btnSecondary" onclick="return false" style="margin-left: 5px"><i class='glyphicon glyphicon-repeat'></i> Back</button>
    </div>
</div>

<script src="~/Scripts/Page/ClaimReturnEquipment/ViewEquipmentRequest.js"></script>
<style>
    .panel-title {
        font-family: 'Product Sans';
        font-weight: bold;
    }
    @@media screen and (min-width: 760px){
        .ViewList {
            padding-left: 0 !important;
        }
    }

    .ViewList {
        margin-top: 30px;
    }

    @@media screen and (max-width: 760px) {
        .modal-body {
            font-family: 'Product Sans' !important;
        }
    }

    .modal-content {
        margin: 0 7%;
    }

    .modal-header {
        text-align: center;
        font-family: 'Product Sans';
        padding: 15px 0 !important;
        color: var(--primary-color);
    }

    .modal-body-logo {
        text-align: center;
        color: var(--primary-color);
        width: 200px;
        margin: 0 auto;
    }

    .modal-body {
        text-align: center;
        font-family: 'Product Sans' !important;
    }

    .modal-footer {
        text-align: center !important;
    }

    .btnRed, .btnGray {
        box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    }

    .btnRed {
        background: var(--primary-color) !important;
    }
</style>


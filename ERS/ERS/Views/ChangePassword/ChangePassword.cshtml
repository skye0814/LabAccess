@model ERSEntity.SystemUserChangePasswordEntity
@{
    Layout = null;
    var keybytes = System.Configuration.ConfigurationManager.AppSettings["keybytes"];
    var ivbytes = System.Configuration.ConfigurationManager.AppSettings["ivbytes"];
}

<div class="wrap-contact100" style="margin-top: 30px;">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmChangePassword" }))
    {
        @Html.AntiForgeryToken()

        <form class="contact100-form">
            <span class="contact100-form-title" style="text-transform: uppercase">
                Change Account Password
            </span>
            <div class="wrap-input100 validate-input">
                <span class="label-input100">Old Password</span><span style="color:red"> *</span>
                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "input100", @maxlength = "50", @placeholder = "Enter old password", @type = "password" } })
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input">
                <span class="label-input100">New Password</span><span style="color:red"> *</span>
                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "input100", @maxlength = "50", @placeholder = "Enter new password", @type = "password" } })
                <span class="focus-input100"></span>
                <div class="hoverable-window">
                    <i class="bx bxs-up-arrow"></i>
                    <div>
                        Password must contain at least an uppercase letter, a numeric, and a special character and at least six(6) characters in length<br />
                    </div>
                </div>
            </div>
            <div class="wrap-input100 validate-input">
                <span class="label-input100">Confirm New Password</span><span style="color:red"> *</span>
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "input100", @maxlength = "50", @placeholder = "Confirm your new password", @type = "password" } })
                <span class="focus-input100"></span>
                <div class="hoverable-window">
                    <i class="bx bxs-up-arrow"></i>
                    <div>
                        Re-type your new password<br />
                    </div>
                </div>
            </div>


            <div id="divErrorMessage"></div>
            <div style="text-align:center; margin-top:30px;">
                <button id="btnSave" class="btnAddPage" onclick="return false"><i class="glyphicon glyphicon-floppy-disk"></i> Change Password</button>
            </div>
        </form>
    }
</div>

<script src="~/Scripts/Page/ChangePassword/ChangePassword.js"></script>
